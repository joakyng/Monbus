<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/textViewSalida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:text="09:00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/green" />

    <TextView
        android:id="@+id/textViewDuracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewLLegada"
        android:layout_alignBottom="@+id/textViewLLegada"
        android:layout_alignParentRight="true"
        android:text="10h 26min"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/countrypicker_blue" />

    <TextView
        android:id="@+id/textViewLLegada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewSalida"
        android:layout_alignBottom="@+id/textViewSalida"
        android:layout_centerHorizontal="true"
        android:text="10:00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/red" />

</RelativeLayout>